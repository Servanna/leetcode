class Solution {
public:
    int maxProfit(vector<int> &prices) {
        // Start typing your C/C++ solution below
        // DO NOT write int main() function
        int profit = 0;
        int buy = 0;
        int sell = 1;
        int i = 1;
        while(i < prices.size()){
            if(prices[sell] > prices[buy]){
                profit += prices[sell] - prices[buy];
                buy = i + 1;
                sell = i + 2;
            }else{
                buy = i;
                sell = i + 1;
            }
            i = sell;
        }
        return profit;
        
    }
};
