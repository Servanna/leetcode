class Solution {
public:
    bool isPalindrome(string s) {
        // IMPORTANT: Please reset any member data you declared, as
        // the same Solution instance will be reused for each test case.
        int n = s.size();
        int j = 0;
        for(int i = 0; i < n; i++){
            if(isalnum(s[i])){
                s[j++] = tolower(s[i]);
            }
        }
        if(--j <= 0) return true;
        int b = 0, e = j;
        while(b <= e){
            if(s[b] == s[e]){
                b++; 
                e--;
            }else{
                return false;
            }
        }
        return true;
    }
};
