class Solution {
public:
    double pow(double x, int n) {
        // Start typing your C/C++ solution below
        // DO NOT write int main() function
        if(n == 0){
            return 1;
        }
        if(n < 0){
            x = 1/x;
        }
        double res = x;
        int newn = abs(n);
        for(int i = 1; i < newn; i++){
            res *= x;
        }
        return res;
    }
};
